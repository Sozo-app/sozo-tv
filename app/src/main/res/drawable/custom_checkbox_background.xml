<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="#FF0000" /> <!-- Red color when checked -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="#FFFFFF" /> <!-- Default white background -->
            <stroke
                android:width="2dp"
                android:color="#FF0000" /> <!-- Red border -->
        </shape>
    </item>
</selector>
