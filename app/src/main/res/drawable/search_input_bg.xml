<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#2A2A2A"/> <!-- Slightly lighter when focused -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#FF4444"/> <!-- Red border focus -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1C1C1C"/> <!-- Normal dark -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#444444"/> <!-- Subtle border -->
        </shape>
    </item>

</selector>
