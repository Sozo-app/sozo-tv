<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Unfocused State -->
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#15FFFFFF" />
        </shape>
    </item>

    <!-- Focused State with Border and Glow -->
    <item android:state_focused="true">
        <!-- Using a layer-list to combine a glow effect with the main shape -->
        <layer-list>
            <!-- Glow layer (placed behind the main shape) -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="12dp" />
                    <!-- A semi-transparent solid color gives a glow effect -->
                    <solid android:color="#50494E57" />
                </shape>
            </item>

            <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="12dp" />
                    <stroke android:width="2dp" android:color="@color/red60" />
                    <solid android:color="#14FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
