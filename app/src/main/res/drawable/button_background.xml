<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4444" /> <!-- Bright Red -->
            <corners android:radius="8dp" />
            <stroke android:width="3dp" android:color="#FF8888" />
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp"/>
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#331111" /> <!-- Soft dark background -->
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#552222" />
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp"/>
        </shape>
    </item>
</selector>
