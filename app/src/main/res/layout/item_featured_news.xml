<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-compat"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="240dp"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="16dp"
    android:background="@color/anime_card_background"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:stateListAnimator="@animator/card_lift_animator">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            app1:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            android:id="@+id/newsImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="news_image_transition"
            tools:src="@drawable/joker" />

        <View
            android:id="@+id/gradientOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_overlay" />

        <TextView
            android:id="@+id/featuredBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="12dp"
            android:background="@drawable/badge_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:text="â˜… FEATURED"
            android:textColor="@color/red"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/categoryBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/category_badge_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="ANIME"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/sourceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AnimeNews"
                    android:textColor="@color/tv_secondary_text"
                    android:textSize="10sp"
                    android:alpha="0.8" />

            </LinearLayout>

            <!-- News Title -->
            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Latest Anime News: Epic Season Finale Breaks Records"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:lineSpacingExtra="2dp"
                android:fontFamily="@font/days" />

            <!-- Description (for TV focus) -->
            <TextView
                android:id="@+id/newsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Discover the latest updates from your favorite anime series..."
                android:textColor="@color/grayText"
                android:textSize="12sp"
                android:alpha="0.9"
                android:visibility="gone" />


        </LinearLayout>

        <View
            android:id="@+id/focusIndicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tv_focus_indicator"
            android:visibility="invisible" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
