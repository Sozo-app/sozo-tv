<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_browse_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:deviceIds="tv"
    tools:ignore="MergeRootFrame">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background_tv" />


    </FrameLayout>

    <com.ipsat.ipsat_tv.components.navigation.NavigationSlideView
        android:id="@+id/navMain"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/navigation_background"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:headerLayout="@layout/content_header_menu_main_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_main_activity_tv"
        app:menuGravity="top"
        app:menuSpacing="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="-10dp"
            android:layout_marginEnd="-10dp"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:paddingStart="18dp"
            android:paddingTop="5dp"
            android:paddingEnd="0dp"
            android:paddingBottom="10dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:text="Contact"
                android:textSize="14sp" />
        </LinearLayout>
    </com.ipsat.ipsat_tv.components.navigation.NavigationSlideView>

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#33FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/navMain" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_main_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/app_graph" />
</androidx.constraintlayout.widget.ConstraintLayout>