<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="40dp"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:paddingHorizontal="4dp"
    android:orientation="horizontal"
    android:layout_marginVertical="3dp"
    android:layout_marginHorizontal="15dp"
    android:background="@drawable/background_button"
    app:layout_constraintStart_toStartOf="parent"
    android:gravity="center_vertical">

        <View
            android:id="@+id/space_vw1"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_height="2dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="18dp"
            android:id="@+id/sectionImg"
            android:duplicateParentState="true"
            android:layout_height="18dp"
            app:tint="@color/color_item_tv_section_profile"
            android:layout_marginHorizontal="8dp"
            app:srcCompat="@drawable/hd_film" />

        <TextView
            android:id="@+id/sectionTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="10sp"
            android:duplicateParentState="true"
            android:fontFamily="@font/days"
            android:textColor="@color/color_item_tv_category_tv"
            android:text="@string/akkount_holati"
            tools:ignore="SmallSp" />

        <View
            android:id="@+id/space_vw2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_height="2dp"/>

</LinearLayout>