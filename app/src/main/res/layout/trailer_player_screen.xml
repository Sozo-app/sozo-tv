<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".presentation.screens.play.player.PlayerScreen">

    <com.saikou.sozo_tv.components.PlayerTvView
        android:id="@+id/pv_player"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        app:use_controller="true"
        android:focusableInTouchMode="true"
        android:visibility="visible"
        app:controller_layout_id="@layout/content_controller_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:resize_mode="fit"
        app:show_buffering="always"
        app:show_next_button="false"
        app:show_previous_button="false"
        app:show_subtitle_button="true"
        app:show_timeout="2000" />


    <LinearLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/black"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/days"
            android:padding="8dp"
            android:text="Movie is loading..."
            android:textAlignment="center"

            android:textColor="@color/lb_tv_white" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:indicatorColor="@color/white40"
            app:trackColor="@color/red"
            android:indeterminate="true"
            android:paddingHorizontal="20dp"
            android:paddingVertical="4dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>