<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="550dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:minWidth="550dp"
    android:orientation="vertical"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Filter "
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end|center"
            android:layout_marginEnd="12dp"
            android:background="@drawable/close_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:src="@drawable/close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_item_tv_section_profile" />
    </FrameLayout>

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/sortFilter"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/spinnerbg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:hint="Choose Sort"
        android:padding="10dp"
        android:textColor="@color/lb_tv_white"
        android:textColorHint="@color/lb_tv_white"
        android:textSize="14.5sp"
        app:spinner_arrow_gravity="end"
        app:spinner_arrow_padding="8dp"
        app:spinner_arrow_show="true"
        app:spinner_divider_color="@color/color_item_tv_section_profile"
        app:spinner_divider_show="true"
        app:spinner_divider_size="0.4dp"
        app:spinner_item_array="@array/questions"
        app:spinner_item_height="46dp"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/main_background"
        app:spinner_popup_elevation="14dp"
        app:spinner_popup_focusable="true"
        app:spinner_popup_max_height="200dp" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/yearFilter"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/spinnerbg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:hint="Choose Year"
        android:padding="10dp"
        android:textColor="@color/lb_tv_white"
        android:textColorHint="@color/lb_tv_white"
        android:textSize="14.5sp"
        app:spinner_arrow_gravity="end"
        app:spinner_arrow_padding="8dp"
        app:spinner_arrow_show="true"
        app:spinner_divider_color="@color/lb_tv_white"
        app:spinner_divider_show="true"
        app:spinner_divider_size="0.4dp"
        app:spinner_item_array="@array/questions"
        app:spinner_item_height="46dp"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/main_background"
        app:spinner_popup_elevation="14dp"
        app:spinner_popup_focusable="true"
        app:spinner_popup_max_height="200dp" />

    <LinearLayout
        android:id="@+id/input_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_login_edittext_for_phone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sliderHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/days"
            android:text="Choose Rating:"
            android:textColor="@color/white40"
            android:textSize="13sp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderRating"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center|start"
            android:stepSize="1"
            android:valueFrom="1"
            android:valueTo="10"
            app:labelBehavior="floating"
            app:thumbColor="@color/red"
            app:thumbHeight="16dp"
            app:thumbWidth="16dp"
            app:tickColor="@color/main_background"
            app:trackColor="@color/red60" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/applyFilter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutSubscriptionTxt">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:duplicateParentState="true"
                android:fontFamily="@font/days"
                android:paddingVertical="13dp"

                android:text="Apply"
                android:textAlignment="center"
                android:textColor="@color/color_item_tv_category_tv"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/clearFilter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/background_button"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutSubscriptionTxt">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:duplicateParentState="true"
                android:paddingVertical="6dp"
                android:src="@drawable/clear_filter"
                android:textSize="12sp"
                app:tint="@color/color_item_tv_section_profile" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
